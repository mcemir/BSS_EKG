<Window x:Class="BSS___EKG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.codeplex.com"
        xmlns:local="clr-namespace:BSS___EKG"
        Title="MainWindow">

    <Window.DataContext>
        <local:SignalAcquisition/>
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Init Acquisition" Click="LoadSignal_Click"/>
                <MenuItem Header="_Play" Click="playSignalButton_Click"/>
                <MenuItem Header="_Stop" Click="stopSignalButton_Click"/>
            </MenuItem>
        </Menu>
        <Grid> 
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <oxy:Plot x:Name="plot" Grid.Row="0">
                <oxy:Plot.Series>
                    <oxy:LineSeries ItemsSource="{Binding Points}"/>
                </oxy:Plot.Series>
            </oxy:Plot>
            
            <Grid Grid.Row="1" Height="50">
                
            </Grid>
        </Grid>

    </DockPanel>
</Window>
